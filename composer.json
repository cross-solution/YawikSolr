{
    "type": "yawik-module",
    "name": "yawik/solr",
    "description": "This module enables solr search for job openings.",
    "license": "MIT",
    "authors": [
        {
            "name": "Carsten Bleek",
            "email": "bleek@cross-solution.de"
        },
        {
            "name": "Mathias Gelhausen",
            "email": "gelhausen@cross-solution.de"
        },
        {
            "name": "Anthonius Munthi",
            "email": "me@itstoni.com"
        }
    ],
    "support": {
        "source": "https://github.com/yawik/Solr"
    },
    "keywords": [
        "yawik",
        "solr",
        "zf"
    ],
    "prefer-stable": true,
    "minimum-stability": "dev",
    "autoload": {
        "psr-4": {
            "Solr\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-0": {
            "": "test/"
        }
    },
    "config": {
        "platform": {
            "ext-mongo": "1.6.16"
        },
        "process-timeout": 0
    },
    "scripts": {
        "auto-scripts": [
            "npm install"
        ],
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "serve": "php -S localhost:8000 -t test/sandbox/public",
        "start-selenium": "./vendor/bin/selenium-server-standalone -p 4444 -Dwebdriver.chrome.driver=./vendor/bin/chromedriver",
        "test": "phpunit"
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "0.32-dev"
        },
        "zf": {
            "module": "Solr"
        }
    },
    "require": {
        "php": ">=7.2",
        "ext-solr": ">=2.4",
        "laminas/laminas-progressbar": "^2.5",
        "yawik/core": "^0.34.0",
        "yawik/cv": "^0.34.0",
        "yawik/auth": "^0.34.0",
        "yawik/jobs": "^0.34.0",
        "yawik/applications": "^0.34.0",
        "yawik/settings": "^0.34.0",
        "yawik/organizations": "^0.34.0",
        "yawik/geo": "^1.1.0",
        "yawik/composer-plugin": "^2.0.0",
        "laminas/laminas-dependency-plugin": "^1.0"
    },
    "require-dev": {
        "yawik/behat": "^0.34.0",
        "cross-solution/phpunit-utils": "^2.0",
        "phpunit/phpunit": "^8.2.3"
    }
}
